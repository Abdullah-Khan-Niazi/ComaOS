<Window x:Class="ComaOS.UI.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ComaOS" 
        Height="450" Width="650"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        Topmost="True">
    
    <Border Background="#1a1a2e" CornerRadius="16" BorderBrush="#3a3a4a" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect BlurRadius="30" ShadowDepth="0" Opacity="0.6" Color="#000"/>
        </Border.Effect>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="70"/>
            </Grid.RowDefinitions>

            <!-- Logo and Animated "Chance" Text -->
            <StackPanel Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center">
                <!-- Animated Logo -->
                <Border x:Name="LogoBorder" Width="90" Height="90" CornerRadius="45">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#7B93FF" Offset="0"/>
                            <GradientStop Color="#6E5BFF" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.5" Color="#7B93FF"/>
                    </Border.Effect>
                    <TextBlock Text="C" FontSize="50" FontWeight="Bold" 
                               Foreground="White" HorizontalAlignment="Center" 
                               VerticalAlignment="Center" Margin="0,-3,0,0"/>
                </Border>

                <!-- Animated CHANCE Text - Letter by Letter -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,25,0,0">
                    <TextBlock x:Name="Letter_C" Text="C" FontSize="52" FontWeight="Bold" 
                               Foreground="#333" FontFamily="Segoe UI Light"/>
                    <TextBlock x:Name="Letter_H" Text="H" FontSize="52" FontWeight="Bold" 
                               Foreground="#333" FontFamily="Segoe UI Light"/>
                    <TextBlock x:Name="Letter_A" Text="A" FontSize="52" FontWeight="Bold" 
                               Foreground="#333" FontFamily="Segoe UI Light"/>
                    <TextBlock x:Name="Letter_N" Text="N" FontSize="52" FontWeight="Bold" 
                               Foreground="#333" FontFamily="Segoe UI Light"/>
                    <TextBlock x:Name="Letter_C2" Text="C" FontSize="52" FontWeight="Bold" 
                               Foreground="#333" FontFamily="Segoe UI Light"/>
                    <TextBlock x:Name="Letter_E" Text="E" FontSize="52" FontWeight="Bold" 
                               Foreground="#333" FontFamily="Segoe UI Light"/>
                </StackPanel>

                <!-- Tagline -->
                <TextBlock x:Name="Tagline" Text="" FontSize="14" FontStyle="Italic"
                           Foreground="#666" HorizontalAlignment="Center" Margin="0,8,0,0"/>
            </StackPanel>

            <!-- ComaOS Title -->
            <StackPanel Grid.Row="1" HorizontalAlignment="Center" Margin="0,0,0,10">
                <TextBlock Text="ComaOS" FontSize="28" FontWeight="Light" 
                           Foreground="#4cc9f0" HorizontalAlignment="Center"/>
                <TextBlock Text="Abdullah Khan Niazi" FontSize="12" 
                           Foreground="#666" HorizontalAlignment="Center" Margin="0,2,0,0"/>
            </StackPanel>

            <!-- Loading Progress -->
            <StackPanel Grid.Row="2" Margin="80,10">
                <Border Height="5" CornerRadius="2.5" Background="#252535">
                    <Border x:Name="ProgressBar" CornerRadius="2.5" HorizontalAlignment="Left" Width="0">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="#7B93FF" Offset="0"/>
                                <GradientStop Color="#F472B6" Offset="0.5"/>
                                <GradientStop Color="#A855F7" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                    </Border>
                </Border>
            </StackPanel>

            <!-- Loading Message -->
            <TextBlock x:Name="LoadingText" Grid.Row="3" Text="" 
                       FontSize="11" Foreground="#888" HorizontalAlignment="Center" 
                       Margin="0,8,0,0"/>

            <!-- Footer -->
            <StackPanel Grid.Row="4" VerticalAlignment="Center">
                <TextBlock Text="Version 1.0.0 • Operating System Simulator" FontSize="10" 
                           Foreground="#444" HorizontalAlignment="Center"/>
                <TextBlock Text="© 2025 Powered by Vibe Coding" FontSize="9" 
                           Foreground="#333" HorizontalAlignment="Center" Margin="0,4,0,0"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
