<UserControl x:Class="ComaOS.UI.MVVM.Views.Apps.ImageViewerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="500"
             Background="#1a1a2a">
    
    <Grid>
        <!-- Gallery Popup -->
        <Popup x:Name="GalleryPopup" Placement="Center" StaysOpen="False">
            <Border Background="#252535" CornerRadius="8" Padding="15" 
                    BorderBrush="#3a3a4a" BorderThickness="1">
                <StackPanel Width="350">
                    <TextBlock Text="ðŸ–¼ Image Gallery" FontSize="16" Foreground="#fff" 
                               Margin="0,0,0,15" FontWeight="SemiBold"/>
                    
                    <ListBox x:Name="ImageList" Background="Transparent" BorderThickness="0"
                             SelectionChanged="ImageList_SelectionChanged" MaxHeight="300">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Foreground" Value="#ccc"/>
                                <Setter Property="Padding" Value="8,6"/>
                                <Setter Property="Cursor" Value="Hand"/>
                            </Style>
                        </ListBox.ItemContainerStyle>
                    </ListBox>
                    
                    <Button Content="Close" Click="CloseGallery_Click"
                            Background="#3a3a4a" Foreground="#ccc" Padding="10,5" 
                            BorderThickness="0" Margin="0,10,0,0" HorizontalAlignment="Right" Cursor="Hand"/>
                </StackPanel>
            </Border>
        </Popup>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
        
        <!-- Toolbar -->
        <Border Grid.Row="0" Background="#252535" Padding="8">
            <StackPanel Orientation="Horizontal">
                <Button x:Name="OpenButton" Content="ðŸ“‚ Open" Click="OpenButton_Click"
                        Background="#3a3a4a" Foreground="#ccc" Padding="10,5" 
                        BorderThickness="0" Margin="0,0,5,0" Cursor="Hand"/>
                <Button x:Name="PrevButton" Content="â—€" Click="PrevButton_Click"
                        Background="#3a3a4a" Foreground="#ccc" Width="30" Height="28" 
                        BorderThickness="0" Margin="5,0" Cursor="Hand"/>
                <Button x:Name="NextButton" Content="â–¶" Click="NextButton_Click"
                        Background="#3a3a4a" Foreground="#ccc" Width="30" Height="28" 
                        BorderThickness="0" Margin="0,0,10,0" Cursor="Hand"/>
                
                <Border Width="1" Background="#3a3a4a" Margin="5,2"/>
                
                <Button x:Name="ZoomOutButton" Content="âž–" Click="ZoomOutButton_Click"
                        Background="#3a3a4a" Foreground="#ccc" Width="30" Height="28" 
                        BorderThickness="0" Margin="10,0,2,0" Cursor="Hand"/>
                <TextBlock x:Name="ZoomLevel" Text="100%" Foreground="#888" 
                           VerticalAlignment="Center" Width="45" TextAlignment="Center"/>
                <Button x:Name="ZoomInButton" Content="âž•" Click="ZoomInButton_Click"
                        Background="#3a3a4a" Foreground="#ccc" Width="30" Height="28" 
                        BorderThickness="0" Margin="2,0,5,0" Cursor="Hand"/>
                <Button x:Name="FitButton" Content="â¬œ Fit" Click="FitButton_Click"
                        Background="#3a3a4a" Foreground="#ccc" Padding="8,5" 
                        BorderThickness="0" Margin="5,0" Cursor="Hand"/>
                
                <Border Width="1" Background="#3a3a4a" Margin="5,2"/>
                
                <Button x:Name="RotateLeftButton" Content="â†º" Click="RotateLeftButton_Click"
                        Background="#3a3a4a" Foreground="#ccc" Width="30" Height="28" 
                        BorderThickness="0" Margin="10,0,2,0" Cursor="Hand" FontSize="16"/>
                <Button x:Name="RotateRightButton" Content="â†»" Click="RotateRightButton_Click"
                        Background="#3a3a4a" Foreground="#ccc" Width="30" Height="28" 
                        BorderThickness="0" Margin="2,0" Cursor="Hand" FontSize="16"/>
            </StackPanel>
        </Border>
        
        <!-- Image Display Area -->
        <Border Grid.Row="1" Background="#0a0a15" Margin="10" CornerRadius="4" ClipToBounds="True">
            <Grid>
                <!-- Image Placeholder with Emoji Art -->
                <StackPanel x:Name="ImageDisplay" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock x:Name="ImageEmoji" Text="ðŸ–¼" FontSize="120" 
                               HorizontalAlignment="Center" RenderTransformOrigin="0.5,0.5">
                        <TextBlock.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform x:Name="ImageScale" ScaleX="1" ScaleY="1"/>
                                <RotateTransform x:Name="ImageRotation" Angle="0"/>
                            </TransformGroup>
                        </TextBlock.RenderTransform>
                    </TextBlock>
                    <TextBlock x:Name="ImageTitle" Text="No Image Loaded" 
                               FontSize="14" Foreground="#888" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                </StackPanel>
                
                <!-- No Image Placeholder -->
                <StackPanel x:Name="NoImagePlaceholder" VerticalAlignment="Center" HorizontalAlignment="Center"
                            Visibility="Visible">
                    <TextBlock Text="ðŸ“·" FontSize="48" HorizontalAlignment="Center" Opacity="0.5"/>
                    <TextBlock Text="No image selected" FontSize="14" Foreground="#555" 
                               HorizontalAlignment="Center" Margin="0,10,0,0"/>
                    <TextBlock Text="Click 'Open' to browse the gallery" FontSize="11" Foreground="#444" 
                               HorizontalAlignment="Center" Margin="0,5,0,0"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Status Bar -->
        <Border Grid.Row="2" Background="#252535" Padding="10,6">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock x:Name="ImageInfo" Text="Ready" Foreground="#888" FontSize="11"/>
                <TextBlock x:Name="ImageIndex" Grid.Column="1" Text="" Foreground="#888" FontSize="11"/>
            </Grid>
        </Border>
    </Grid>
    </Grid>
</UserControl>
