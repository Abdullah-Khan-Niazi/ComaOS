<UserControl x:Class="ComaOS.UI.MVVM.Views.Apps.ClockView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="350"
             Background="#1a1a2a">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Tab Header -->
        <Border Grid.Row="0" Background="#252535" CornerRadius="8" Padding="5" Margin="0,0,0,15">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <RadioButton x:Name="ClockTab" Content="ðŸ• Clock" IsChecked="True" 
                             GroupName="Tabs" Click="Tab_Click"
                             Style="{StaticResource {x:Type ToggleButton}}"
                             Background="Transparent" Foreground="#ccc" Padding="15,8"
                             BorderThickness="0" Cursor="Hand"/>
                <RadioButton x:Name="StopwatchTab" Content="â± Stopwatch" 
                             GroupName="Tabs" Click="Tab_Click"
                             Style="{StaticResource {x:Type ToggleButton}}"
                             Background="Transparent" Foreground="#ccc" Padding="15,8"
                             BorderThickness="0" Cursor="Hand"/>
                <RadioButton x:Name="TimerTab" Content="â² Timer" 
                             GroupName="Tabs" Click="Tab_Click"
                             Style="{StaticResource {x:Type ToggleButton}}"
                             Background="Transparent" Foreground="#ccc" Padding="15,8"
                             BorderThickness="0" Cursor="Hand"/>
            </StackPanel>
        </Border>
        
        <!-- Clock Panel -->
        <StackPanel x:Name="ClockPanel" Grid.Row="1" VerticalAlignment="Center">
            <TextBlock x:Name="TimeDisplay" Text="00:00:00" FontSize="56" 
                       Foreground="#fff" HorizontalAlignment="Center" FontWeight="Light"
                       FontFamily="Consolas"/>
            <TextBlock x:Name="DateDisplay" Text="Friday, November 28, 2025" FontSize="16" 
                       Foreground="#888" HorizontalAlignment="Center" Margin="0,10,0,0"/>
            <TextBlock x:Name="TimezoneDisplay" Text="Local Time (UTC+00:00)" FontSize="12" 
                       Foreground="#555" HorizontalAlignment="Center" Margin="0,5,0,20"/>
            
            <!-- World Clocks -->
            <Border Background="#252535" CornerRadius="8" Padding="15" Margin="0,20,0,0">
                <StackPanel>
                    <TextBlock Text="ðŸŒ World Clocks" FontSize="13" Foreground="#888" 
                               FontWeight="SemiBold" Margin="0,0,0,10"/>
                    <ItemsControl x:Name="WorldClocks"/>
                </StackPanel>
            </Border>
        </StackPanel>
        
        <!-- Stopwatch Panel -->
        <StackPanel x:Name="StopwatchPanel" Grid.Row="1" VerticalAlignment="Center" Visibility="Collapsed">
            <TextBlock x:Name="StopwatchDisplay" Text="00:00:00.00" FontSize="48" 
                       Foreground="#fff" HorizontalAlignment="Center" FontWeight="Light"
                       FontFamily="Consolas"/>
            
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,30,0,0">
                <Button x:Name="StopwatchStartButton" Content="â–¶ Start" Click="StopwatchStart_Click"
                        Background="#22c55e" Foreground="#fff" Padding="20,10" 
                        BorderThickness="0" FontSize="14" Margin="5" Cursor="Hand"/>
                <Button x:Name="StopwatchLapButton" Content="ðŸ Lap" Click="StopwatchLap_Click"
                        Background="#3a3a4a" Foreground="#ccc" Padding="20,10" 
                        BorderThickness="0" FontSize="14" Margin="5" Cursor="Hand" IsEnabled="False"/>
                <Button x:Name="StopwatchResetButton" Content="â†º Reset" Click="StopwatchReset_Click"
                        Background="#3a3a4a" Foreground="#ccc" Padding="20,10" 
                        BorderThickness="0" FontSize="14" Margin="5" Cursor="Hand"/>
            </StackPanel>
            
            <!-- Laps -->
            <Border Background="#252535" CornerRadius="8" Padding="10" Margin="0,20,0,0" MaxHeight="150">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel x:Name="LapsList"/>
                </ScrollViewer>
            </Border>
        </StackPanel>
        
        <!-- Timer Panel -->
        <StackPanel x:Name="TimerPanel" Grid.Row="1" VerticalAlignment="Center" Visibility="Collapsed">
            <TextBlock x:Name="TimerDisplay" Text="00:05:00" FontSize="48" 
                       Foreground="#fff" HorizontalAlignment="Center" FontWeight="Light"
                       FontFamily="Consolas"/>
            
            <!-- Timer Input (shown when not running) -->
            <StackPanel x:Name="TimerInputPanel" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                <StackPanel>
                    <TextBlock Text="Hours" Foreground="#666" FontSize="10" HorizontalAlignment="Center"/>
                    <TextBox x:Name="TimerHours" Text="00" Width="50" TextAlignment="Center"
                             Background="#252535" Foreground="#ccc" BorderBrush="#3a3a4a"
                             Padding="8" FontSize="18" FontFamily="Consolas"/>
                </StackPanel>
                <TextBlock Text=":" Foreground="#666" FontSize="24" VerticalAlignment="Bottom" Margin="5,0,5,10"/>
                <StackPanel>
                    <TextBlock Text="Minutes" Foreground="#666" FontSize="10" HorizontalAlignment="Center"/>
                    <TextBox x:Name="TimerMinutes" Text="05" Width="50" TextAlignment="Center"
                             Background="#252535" Foreground="#ccc" BorderBrush="#3a3a4a"
                             Padding="8" FontSize="18" FontFamily="Consolas"/>
                </StackPanel>
                <TextBlock Text=":" Foreground="#666" FontSize="24" VerticalAlignment="Bottom" Margin="5,0,5,10"/>
                <StackPanel>
                    <TextBlock Text="Seconds" Foreground="#666" FontSize="10" HorizontalAlignment="Center"/>
                    <TextBox x:Name="TimerSeconds" Text="00" Width="50" TextAlignment="Center"
                             Background="#252535" Foreground="#ccc" BorderBrush="#3a3a4a"
                             Padding="8" FontSize="18" FontFamily="Consolas"/>
                </StackPanel>
            </StackPanel>
            
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,30,0,0">
                <Button x:Name="TimerStartButton" Content="â–¶ Start" Click="TimerStart_Click"
                        Background="#60a5fa" Foreground="#fff" Padding="20,10" 
                        BorderThickness="0" FontSize="14" Margin="5" Cursor="Hand"/>
                <Button x:Name="TimerResetButton" Content="â†º Reset" Click="TimerReset_Click"
                        Background="#3a3a4a" Foreground="#ccc" Padding="20,10" 
                        BorderThickness="0" FontSize="14" Margin="5" Cursor="Hand"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
