<UserControl x:Class="ComaOS.UI.MVVM.Views.Apps.VideoPlayerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="500"
             Background="#1a1a2a">
    
    <Grid>
        <!-- Video Library Popup -->
        <Popup x:Name="LibraryPopup" Placement="Center" StaysOpen="False">
            <Border Background="#252535" CornerRadius="8" Padding="15" 
                    BorderBrush="#3a3a4a" BorderThickness="1">
                <StackPanel Width="300">
                    <TextBlock Text="ðŸ“š Video Library" FontSize="16" Foreground="#fff" 
                               Margin="0,0,0,15" FontWeight="SemiBold"/>
                    
                    <ListBox x:Name="VideoList" Background="Transparent" BorderThickness="0"
                             SelectionChanged="VideoList_SelectionChanged" MaxHeight="250">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Foreground" Value="#ccc"/>
                                <Setter Property="Padding" Value="8,6"/>
                                <Setter Property="Cursor" Value="Hand"/>
                            </Style>
                        </ListBox.ItemContainerStyle>
                    </ListBox>
                    
                    <Button Content="Close" Click="CloseLibrary_Click"
                            Background="#3a3a4a" Foreground="#ccc" Padding="10,5" 
                            BorderThickness="0" Margin="0,10,0,0" HorizontalAlignment="Right" Cursor="Hand"/>
                </StackPanel>
            </Border>
        </Popup>
    
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
        
        <!-- Video Display Area -->
        <Border Grid.Row="0" Background="#0a0a15" Margin="10,10,10,5" CornerRadius="4">
            <Grid>
                <!-- Video Placeholder / Now Playing Info -->
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock x:Name="VideoIcon" Text="ðŸŽ¬" FontSize="64" 
                               HorizontalAlignment="Center" Margin="0,0,0,10"/>
                    <TextBlock x:Name="VideoTitle" Text="No Video Selected" 
                               FontSize="18" Foreground="#ccc" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="VideoInfo" Text="Select a video from the library" 
                               FontSize="12" Foreground="#666" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                </StackPanel>
                
                <!-- Play Overlay -->
                <Border x:Name="PlayOverlay" Background="#40000000" Visibility="Collapsed">
                    <TextBlock Text="â–¶" FontSize="72" Foreground="#fff" 
                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
            </Grid>
        </Border>
        
        <!-- Progress Bar -->
        <Grid Grid.Row="1" Margin="10,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock x:Name="CurrentTime" Text="0:00" Foreground="#888" FontSize="11" 
                       VerticalAlignment="Center" Margin="0,0,8,0"/>
            <Slider x:Name="ProgressSlider" Grid.Column="1" Minimum="0" Maximum="100" Value="0"
                    VerticalAlignment="Center" ValueChanged="ProgressSlider_ValueChanged"/>
            <TextBlock x:Name="TotalTime" Grid.Column="2" Text="0:00" Foreground="#888" FontSize="11" 
                       VerticalAlignment="Center" Margin="8,0,0,0"/>
        </Grid>
        
        <!-- Controls -->
        <Border Grid.Row="2" Background="#252535" Padding="10" Margin="10,5,10,10" CornerRadius="4">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Left Controls -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Button x:Name="OpenButton" Content="ðŸ“‚ Open" Click="OpenButton_Click"
                            Background="#3a3a4a" Foreground="#ccc" Padding="10,5" 
                            BorderThickness="0" Margin="0,0,5,0" Cursor="Hand"/>
                </StackPanel>
                
                <!-- Playback Controls -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button x:Name="PrevButton" Content="â®" Click="PrevButton_Click"
                            Background="#3a3a4a" Foreground="#ccc" Width="36" Height="36" 
                            BorderThickness="0" FontSize="16" Margin="2" Cursor="Hand"/>
                    <Button x:Name="RewindButton" Content="âª" Click="RewindButton_Click"
                            Background="#3a3a4a" Foreground="#ccc" Width="36" Height="36" 
                            BorderThickness="0" FontSize="16" Margin="2" Cursor="Hand"/>
                    <Button x:Name="PlayPauseButton" Content="â–¶" Click="PlayPauseButton_Click"
                            Background="#60a5fa" Foreground="#fff" Width="44" Height="44" 
                            BorderThickness="0" FontSize="20" Margin="5,0" Cursor="Hand"/>
                    <Button x:Name="FastForwardButton" Content="â©" Click="FastForwardButton_Click"
                            Background="#3a3a4a" Foreground="#ccc" Width="36" Height="36" 
                            BorderThickness="0" FontSize="16" Margin="2" Cursor="Hand"/>
                    <Button x:Name="NextButton" Content="â­" Click="NextButton_Click"
                            Background="#3a3a4a" Foreground="#ccc" Width="36" Height="36" 
                            BorderThickness="0" FontSize="16" Margin="2" Cursor="Hand"/>
                </StackPanel>
                
                <!-- Right Controls -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBlock Text="ðŸ”Š" Foreground="#888" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <Slider x:Name="VolumeSlider" Width="80" Minimum="0" Maximum="100" Value="75"
                            VerticalAlignment="Center" ValueChanged="VolumeSlider_ValueChanged"/>
                    <Button x:Name="FullscreenButton" Content="â›¶" Click="FullscreenButton_Click"
                            Background="#3a3a4a" Foreground="#ccc" Width="30" Height="30" 
                            BorderThickness="0" FontSize="14" Margin="10,0,0,0" Cursor="Hand"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
    </Grid>
</UserControl>
