<UserControl x:Class="ComaOS.UI.MVVM.Views.DesktopView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ComaOS.UI.MVVM.Views"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000">
    
    <Grid>
        <!-- Desktop Background -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#1a1a2e" Offset="0"/>
                <GradientStop Color="#16213e" Offset="0.5"/>
                <GradientStop Color="#0f3460" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="48"/>
        </Grid.RowDefinitions>

        <!-- Desktop Area with Icons -->
        <Grid Grid.Row="0">
            <!-- Desktop Icons -->
            <ItemsControl ItemsSource="{Binding DesktopApps}" Margin="20">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Vertical"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button Command="{Binding LaunchCommand}" 
                                Style="{StaticResource DesktopIconButtonStyle}"
                                Margin="5" Width="80" Height="90"
                                ToolTip="{Binding Name}">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="{Binding Icon}" FontSize="36" 
                                           HorizontalAlignment="Center"/>
                                <TextBlock Text="{Binding Name}" FontSize="11" 
                                           Foreground="White" HorizontalAlignment="Center"
                                           TextTrimming="CharacterEllipsis" MaxWidth="70"
                                           Margin="0,5,0,0"/>
                            </StackPanel>
                        </Button>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <!-- Windows Layer -->
            <ItemsControl ItemsSource="{Binding OpenWindows}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <Canvas/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemContainerStyle>
                    <Style TargetType="ContentPresenter">
                        <Setter Property="Canvas.Left" Value="{Binding Left}"/>
                        <Setter Property="Canvas.Top" Value="{Binding Top}"/>
                    </Style>
                </ItemsControl.ItemContainerStyle>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <local:WindowFrameView DataContext="{Binding}"
                                               Visibility="{Binding IsMinimized, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <!-- Start Menu Popup -->
            <Border Visibility="{Binding IsStartMenuOpen, Converter={StaticResource BoolToVisibilityConverter}}"
                    HorizontalAlignment="Left" VerticalAlignment="Bottom"
                    Margin="0,0,0,0" Width="320" Height="450"
                    Background="#1e1e2e" CornerRadius="8,8,0,0"
                    BorderBrush="#333" BorderThickness="1">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="20" ShadowDepth="5" Opacity="0.5"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <Border Grid.Row="0" Padding="15" Background="#252535">
                        <StackPanel>
                            <TextBlock Text="All Apps" FontSize="18" FontWeight="SemiBold" Foreground="White"/>
                        </StackPanel>
                    </Border>

                    <!-- App List -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding DesktopApps}" Margin="10">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button Command="{Binding LaunchCommand}"
                                            Style="{StaticResource StartMenuItemStyle}"
                                            HorizontalContentAlignment="Left"
                                            Padding="10,8" Margin="2">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding Icon}" FontSize="20" 
                                                       VerticalAlignment="Center" Width="35"/>
                                            <TextBlock Text="{Binding Name}" FontSize="13" 
                                                       Foreground="White" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Button>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <!-- Footer with Power Options -->
                    <Border Grid.Row="2" Padding="10" Background="#252535">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0" Orientation="Horizontal">
                                <TextBlock Text="Mode: " Foreground="#888" VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding CurrentMode}" Foreground="#4cc9f0" 
                                           FontWeight="SemiBold" VerticalAlignment="Center"/>
                            </StackPanel>
                            
                            <Button Grid.Column="1" Content="â» Shutdown" 
                                    Command="{Binding ShutdownCommand}"
                                    Style="{StaticResource StartMenuItemStyle}"
                                    Foreground="#f72585" Padding="10,5"/>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
        </Grid>

        <!-- Taskbar -->
        <Border Grid.Row="1" Background="#1e1e2e" BorderBrush="#333" BorderThickness="0,1,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Start Button -->
                <Button Grid.Column="0" Command="{Binding OpenStartMenuCommand}"
                        Style="{StaticResource TaskbarButtonStyle}"
                        Width="48" Height="48" Margin="4,0">
                    <Border Width="28" Height="28" CornerRadius="14">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#7B93FF" Offset="0"/>
                                <GradientStop Color="#6E5BFF" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <TextBlock Text="C" FontSize="16" FontWeight="Bold" 
                                   Foreground="White" HorizontalAlignment="Center" 
                                   VerticalAlignment="Center" Margin="0,-1,0,0"/>
                    </Border>
                </Button>

                <!-- Running Apps -->
                <ItemsControl Grid.Column="1" ItemsSource="{Binding TaskbarItems}" 
                              VerticalAlignment="Center" Margin="10,0">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Command="{Binding ActivateCommand}"
                                    Style="{StaticResource TaskbarAppButtonStyle}"
                                    ToolTip="{Binding Title}"
                                    Width="44" Height="40" Margin="2,0">
                                <TextBlock Text="{Binding Icon}" FontSize="20"/>
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- System Tray -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="10,0">
                    <!-- Mode Indicator -->
                    <Button Command="{Binding ToggleModeCommand}"
                            Style="{StaticResource TaskbarButtonStyle}"
                            ToolTip="Toggle User/Kernel Mode"
                            Padding="8,4" Margin="0,0,5,0">
                        <TextBlock FontSize="10" FontWeight="SemiBold">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="#4cc9f0"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding CurrentMode}" Value="Kernel">
                                            <Setter Property="Foreground" Value="#f72585"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                            <Run Text="{Binding CurrentMode, Mode=OneWay}"/>
                        </TextBlock>
                    </Button>

                    <!-- System Stats -->
                    <Border Background="#252535" CornerRadius="4" Padding="8,4" Margin="0,4">
                        <StackPanel Orientation="Horizontal">
                            <StackPanel Margin="0,0,10,0">
                                <TextBlock Text="CPU" FontSize="9" Foreground="#666"/>
                                <TextBlock FontSize="11" Foreground="#4cc9f0">
                                    <Run Text="{Binding CpuUsage, StringFormat={}{0:F0}, Mode=OneWay}"/><Run Text="%"/>
                                </TextBlock>
                            </StackPanel>
                            <StackPanel>
                                <TextBlock Text="RAM" FontSize="9" Foreground="#666"/>
                                <TextBlock FontSize="11" Foreground="#f72585">
                                    <Run Text="{Binding RamUsed, Mode=OneWay}"/><Run Text="/"/><Run Text="{Binding RamTotal, Mode=OneWay}"/>
                                </TextBlock>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Clock -->
                    <StackPanel Margin="15,0,5,0" VerticalAlignment="Center">
                        <TextBlock Text="{Binding CurrentTime}" FontSize="12" 
                                   Foreground="White" HorizontalAlignment="Right"/>
                        <TextBlock Text="{Binding CurrentDate}" FontSize="10" 
                                   Foreground="#888" HorizontalAlignment="Right"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
