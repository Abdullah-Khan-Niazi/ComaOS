<UserControl x:Class="ComaOS.UI.MVVM.Views.WindowFrameView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vm="clr-namespace:ComaOS.UI.MVVM.ViewModels"
             xmlns:apps="clr-namespace:ComaOS.UI.MVVM.Views.Apps"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="400"
             x:Name="WindowFrame"
             Width="{Binding Width}" Height="{Binding Height}"
             MouseLeftButtonDown="Window_MouseLeftButtonDown">
    
    <UserControl.Resources>
        <vm:MainViewModel x:Key="MainVM"/>
    </UserControl.Resources>
    
    <Border Background="#1e1e2e" CornerRadius="8" BorderBrush="#3a3a4a" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect BlurRadius="15" ShadowDepth="3" Opacity="0.4"/>
        </Border.Effect>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="36"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <Border Grid.Row="0" Background="#252535" CornerRadius="8,8,0,0"
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Icon and Title -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="12,0">
                        <TextBlock Text="{Binding Icon}" FontSize="14" 
                                   VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBlock Text="{Binding Title}" FontSize="12" 
                                   Foreground="#ccc" VerticalAlignment="Center"
                                   TextTrimming="CharacterEllipsis" MaxWidth="200"/>
                    </StackPanel>

                    <!-- Process Info -->
                    <TextBlock Grid.Column="1" FontSize="10" Foreground="#555"
                               VerticalAlignment="Center" HorizontalAlignment="Center">
                        <Run Text="PID: "/><Run Text="{Binding ProcessId, Mode=OneWay}"/>
                    </TextBlock>

                    <!-- Window Controls -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                        <!-- Minimize -->
                        <Button Style="{StaticResource WindowControlButtonStyle}"
                                Click="MinimizeButton_Click">
                            <Path Data="M0,5 L10,5" Stroke="#888" StrokeThickness="1.5"/>
                        </Button>
                        
                        <!-- Maximize -->
                        <Button Style="{StaticResource WindowControlButtonStyle}"
                                Click="MaximizeButton_Click">
                            <Rectangle Width="10" Height="10" Stroke="#888" StrokeThickness="1.5"/>
                        </Button>
                        
                        <!-- Close -->
                        <Button Style="{StaticResource WindowCloseButtonStyle}"
                                Click="CloseButton_Click">
                            <Path Data="M0,0 L10,10 M10,0 L0,10" Stroke="#888" StrokeThickness="1.5"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Window Content -->
            <Border Grid.Row="1" Background="#1a1a2a" CornerRadius="0,0,8,8" Padding="10">
                <ContentControl x:Name="AppContent"/>
            </Border>
        </Grid>
    </Border>
</UserControl>
