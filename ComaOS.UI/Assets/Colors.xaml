<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Colors -->
    <Color x:Key="PrimaryColor">#4361ee</Color>
    <Color x:Key="SecondaryColor">#3f37c9</Color>
    <Color x:Key="AccentColor">#4cc9f0</Color>
    <Color x:Key="DangerColor">#f72585</Color>
    <Color x:Key="WarningColor">#f77f00</Color>
    <Color x:Key="SuccessColor">#4cc9f0</Color>
    
    <Color x:Key="BackgroundDark">#1a1a2e</Color>
    <Color x:Key="BackgroundMedium">#1e1e2e</Color>
    <Color x:Key="BackgroundLight">#252535</Color>
    <Color x:Key="BorderColor">#3a3a4a</Color>
    
    <Color x:Key="TextPrimary">#ffffff</Color>
    <Color x:Key="TextSecondary">#aaaaaa</Color>
    <Color x:Key="TextMuted">#666666</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource SecondaryColor}"/>
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
    <SolidColorBrush x:Key="DangerBrush" Color="{StaticResource DangerColor}"/>
    
    <SolidColorBrush x:Key="BackgroundDarkBrush" Color="{StaticResource BackgroundDark}"/>
    <SolidColorBrush x:Key="BackgroundMediumBrush" Color="{StaticResource BackgroundMedium}"/>
    <SolidColorBrush x:Key="BackgroundLightBrush" Color="{StaticResource BackgroundLight}"/>
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
    
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimary}"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondary}"/>
    <SolidColorBrush x:Key="TextMutedBrush" Color="{StaticResource TextMuted}"/>

    <!-- Gradient Brushes -->
    <LinearGradientBrush x:Key="PrimaryGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#4361ee" Offset="0"/>
        <GradientStop Color="#3f37c9" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="AccentGradient" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#4361ee" Offset="0"/>
        <GradientStop Color="#7209b7" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="DesktopGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#1a1a2e" Offset="0"/>
        <GradientStop Color="#16213e" Offset="0.5"/>
        <GradientStop Color="#0f3460" Offset="1"/>
    </LinearGradientBrush>

</ResourceDictionary>
